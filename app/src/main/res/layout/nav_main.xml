<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    tools:layout_gravity="bottom">


    <ImageView
        android:id="@+id/vst_center_background_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center|bottom"
        android:alpha="0.4"
        android:src="@drawable/background_circle"
        android:layout_marginBottom="22dp"/>

    <ImageView
        android:id="@+id/vst_center_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/large_circle"
        android:layout_marginBottom="33dp"/>

    <FrameLayout
        android:id="@+id/vst_start_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="start|bottom">

        <ImageView
            android:id="@+id/vst_start_background_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:alpha="0.4"
            android:src="@drawable/background_circle"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_people"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/vst_end_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="end|bottom">
        <ImageView
            android:id="@+id/vst_end_background_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:alpha="0.4"
            android:src="@drawable/background_circle"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_near_me"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/vst_bottom_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center|bottom"/>

    <View
        android:id="@+id/vst_indicator_image"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/indicator_background"/>



</FrameLayout>