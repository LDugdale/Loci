<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lauriedugdale.loci.ui.activity.ImageEntryActivity">

    <FrameLayout
        android:id="@+id/view_entry_hero_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <ImageView
            android:id="@+id/view_entry_hero_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/view_entry_title_bar"
        android:layout_alignBottom="@+id/view_entry_hero_container"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_entry_title"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/entry_title"
            android:padding="10dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/view_entry_description"
        android:layout_alignBottom="@+id/view_entry_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/entry_description"/>



</RelativeLayout>
