<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lauriedugdale.loci.ui.customviews.CircularImageView
            android:id="@+id/ise_profile_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignTop="@+id/ise_right_arrow"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/app_name"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_toRightOf="@id/ise_profile_pic"
            android:id="@+id/ise_name"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <ImageView
            android:id="@+id/ise_right_arrow"
            android:src="@drawable/ic_right_arrow"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <!--<Button-->
            <!--android:id="@+id/add_user_button"-->
            <!--android:layout_weight="1"-->
            <!--style="?android:textAppearanceSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:text="@string/add_user"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentEnd="true" />-->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:alpha="0.7"
        android:background="@color/light_grey"/>
</RelativeLayout>