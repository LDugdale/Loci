<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_margin="50dp">

        <FrameLayout
            android:id="@+id/filter_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/h2"
                android:text="@string/filter_title"/>

        </FrameLayout>

        <View
            android:layout_below="@+id/filter_header"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:id="@+id/type_filter_wrapper"
            android:layout_below="@+id/filter_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:id="@+id/type_filter_title"-->
                <!--android:textSize="@dimen/h3"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:text="@string/type_filter_title"-->
                <!--android:layout_margin="16dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <LinearLayout
                android:id="@+id/filter_checkboxes"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:alpha="0.6"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_audiotrack_light"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <CheckBox
                        android:id="@+id/checkbox_image"
                        android:checked="true"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:alpha="0.6"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <CheckBox
                        android:id="@+id/checkbox_audio"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_below="@+id/type_filter_wrapper"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:background="@color/black"/>

        <RelativeLayout
            android:id="@+id/date_filter_wrapper"
            android:layout_below="@+id/type_filter_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/date_filter_title"
                android:textSize="@dimen/h3"
                android:layout_alignParentTop="true"
                android:text="@string/date_filter_title"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/date_container"
                android:layout_below="@id/date_filter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_date_range"/>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="3"
                    android:id="@+id/display_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From date"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_drop_down" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_date_range"/>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="3"
                    android:id="@+id/display_to_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To date"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"/>

            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/apply_filters"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/add_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_filter_wrapper"/>

    </RelativeLayout>

</RelativeLayout>